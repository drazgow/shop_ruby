<section class="section box is-rounded">
  <div class="container p-3 m-5">
    <div class="columns is-multiline is-vcentered">
      <div class="column is-half">
        <p class="is-size-3 is-capitalized">Product</p>
      </div>
      <div class="column is-one-quarter">
        <p class="is-size-4 has-text-centered">Price</p>
      </div>
      <div class="column is-one-quarter">
        <p class="is-size-4 has-text-right">In cart</p>
      </div>
    </div>
  </div>
  <ul>
    <% current_user.cart.product_items.each do |item| %>
      <li class="m-5 p-3">
        <div class="container">
          <div class="box is-rounded is-centered has-background-primary-light">
            <div class="columns is-multiline is-vcentered">
              <div class="column">
                <img class="image" src="https://fuzati.com/wp-content/uploads/2016/12/Ruby-Logo.png">
              </div>
              <div class="column is-two-fifths">
                <p class="is-size-4 is-capitalized has-text-weight-semibold has-text-left"><%= item.name %></p>
              </div>
              <div class="column is-one-quarter">
                <p class="is-size-5 has-text-centered"><%= item.price %></p>
              </div>
              <div class="column is-one-quarter">
                <p class="is-size-5 has-text-right"><%= item.quantity %></p>
              </div>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</section>